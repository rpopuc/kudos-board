{
  "name": "kudos-board",
  "version": "1.0.0",
  "description": "Node application for creating and displaying Kudos card panels.",
  "main": "index.js",
  "scripts": {
    "validate-installation": "./scripts/install.sh && echo 'Installation validated successfully.'",
    "postinstall": "npm run validate-installation",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --coverageReporters=json-summary",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --watch ./src ./index.ts",
    "prettier": "prettier -c 'src/**/*.ts' 'tests/**/*.ts'",
    "prettier:fix": "prettier -w 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
