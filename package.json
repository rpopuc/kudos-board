{
  "name": "kudos-board",
  "version": "1.0.0",
  "description": "Node application for creating and displaying Kudos card panels.",
  "main": "index.js",
  "scripts": {
    "validate-installation": "./scripts/install.sh && echo 'Installation validated successfully.'",
    "postinstall": "npm run validate-installation",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --coverageReporters=json-summary",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --watch ./src ./index.ts 0.0.0.0",
    "help": "ts-node-dev --help",
    "prettier": "prettier -c 'src/**/*.ts' 'tests/**/*.ts'",
    "prettier:fix": "prettier -w 'src/**/*.ts' 'tests/**/*.ts'",
    "build-swagger": "swagger-jsdoc -d definition.json ./src/infra/adapters/Express/routes/*.ts ./src/infra/adapters/Express/routes/schemas/*.yaml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.5.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
